logo = ''' 
 _                                             
| |                                            
| |__   __ _ _ __   __ _ _ __ ___   __ _ _ __  
| '_ \ / _` | '_ \ / _` | '_ ` _ \ / _` | '_ \ 
| | | | (_| | | | | (_| | | | | | | (_| | | | |
|_| |_|\__,_|_| |_|\__, |_| |_| |_|\__,_|_| |_|
                    __/ |                      
                   |___/    '''


print('HANGMAN GAME')
print(logo)
import random
chosen_word=random.choice(word_list)

display=[]
for b in range(len(chosen_word)):
    display += "_"

print(f"\nYour word is:\n {display}")
guesses=0
place=0
while "_" in display and place!=-7:
    guess = input("\nGuess a letter: ").lower()
    if guess in display:
        print(f"\nYou said '{guess}'. You have already guessed '{guess}'.")
    else:
        for position in range(len(chosen_word)):
            letter=chosen_word[position]
            if letter==guess:
                display[position]=letter         
        if guess not in chosen_word:
            place += -1
            print(f"\nThe letter '{guess}' is not in the word.")
            print(stages[place])
        else:
            print(f"\nYou said '{guess}'. '{guess}' is in the word!")
        word="".join(display)
        print(display)
        guesses += 1

if word==chosen_word:
    print(f'\nThe word was {chosen_word}. You won.')
    print("\n \O/ \n  | \n / \ ","\nYAYAYAYA")
          
else:
    print(f'\n\nThe word was {chosen_word}. You lost.')



